<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.willie.dreamteamtake2.HowToUse"
    tools:showIn="@layout/activity_how_to_use">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="This application is designed for referee use to create tournament, record number of teams, the tournament type, scores and a winner."
                android:id="@+id/textView10"
                android:textColor="#000"
                android:layout_marginBottom="15dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="To create a tournament"
                android:id="@+id/textView12"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1. Press on 'start new tournament'\n2. Enter the name of the tournament\n3. Choose the number of teams\n4. Choose the tournament type from Round Robin, Knockout and Combination\n5. Enter teams' names. If left empty, the teams will be created with default names as displayed, click on 'Create Tournament'\n6. Click on 'Match.. ' to enter the score for both teams.\n7. View upcoming matches by clicking on 'Schedule'\n8. View the scores and the winner by clicking on 'Rankings'"
                android:id="@+id/textView11"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tournament Types"
                android:id="@+id/textView13"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Round Robin"
                android:id="@+id/textView17"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Each team plays against every other team"
                android:id="@+id/textView18"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Knockout"
                android:id="@+id/textView15"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Losing team is eliminated after each round"
                android:id="@+id/textView16"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Combination"
                android:id="@+id/textView19"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Starts with Round Robin, then the top teams are formed into a knockout tournament and eliminated after each round"
                android:id="@+id/textView20"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
