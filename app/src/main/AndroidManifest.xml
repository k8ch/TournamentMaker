<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.willie.dreamteamtake2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Create"
            android:label="@string/title_activity_new_tournament"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.willie.dreamteamtake2.MainActivity" />
        </activity>
        <activity
            android:name=".Create_InputTeams"
            android:label="@string/title_activity_input_teams"
            android:parentActivityName=".Create"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Create" />
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_tournament_layout"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.willie.dreamteamtake2.MainActivity" />
        </activity>
        <activity
            android:name=".Match_EditScore"
            android:label="Edit Score"
            android:parentActivityName=".Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.willie.dreamteamtake2.Match_EditScore" />
        </activity>
        <activity
            android:name=".HowToUse"
            android:label="@string/title_activity_how_to_use"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResetScreen"
            android:label="@string/title_activity_reset_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
